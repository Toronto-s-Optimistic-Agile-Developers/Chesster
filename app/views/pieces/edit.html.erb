<h1 class="text-center">Promote Your Pawn</h1>
<br />
<div id="promote">
  <p class="promotion-notice">Select the type of piece that you want to promote your pawn to!</p>
  <br />
  <%= simple_form_for @piece, url: piece_path do |f| %>
    <%= f.input :type, as: :select, collection: Piece::RANK %>
    <br />
    <%= f.submit 'Promote', class: 'btn btn-success', data: { confirm: "Are you sure you want to give your piece this promotion?"} %>
  <% end %>
</div>
  <br />


